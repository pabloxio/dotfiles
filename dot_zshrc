# vim: ft=zsh

export ZSH="$HOME/.oh-my-zsh"
eval "$(starship init zsh)"

plugins=(
  direnv
  git
  vi-mode
  zsh-autosuggestions
)

source $ZSH/oh-my-zsh.sh

# Tmux
export EDITOR=vim

# asdf
[ -f ${HOME}/.asdf/asdf.sh ] && source ${HOME}/.asdf/asdf.sh

## Loading /Users/pablox/.zsh.d/* config files
for ZSH_CONFIG_FILE in /Users/pablox/.zsh.d/*; do
    source "$ZSH_CONFIG_FILE"
done
